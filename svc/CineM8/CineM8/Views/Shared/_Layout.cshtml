<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/lib/twitter-bootstrap/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/home.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CineM8", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, null)</li>
                </ul>
                <ul class="nav navbar-nav" style="float:right;">
                    <li style="background-color:rgba(255, 10, 10,0.8);"><a type="button" class="loginButton" href="#login-modal" data-toggle="modal" style="color:white;"> Login </a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proiect II</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/twiter-bootstrap")
    @Scripts.Render("~/Scripts/admin.js")
    @Scripts.Render("~/Scripts/bootstrap-table.js")
    @Scripts.Render("~/Scripts/home.js")
    @Scripts.Render("~/Scripts/constants.js")
    @Scripts.Render("~/Scripts/register.js")
    @Scripts.Render("~/Scripts/login.js")
    @Scripts.Render("~/Scripts/AddUpdateMovie.js")
    @Scripts.Render("~/Scripts/UpdateUser.js")
    @Scripts.Render("~/Scripts/api.js")
    @Scripts.Render("~/Scripts/AddHall.js")
    @RenderSection("scripts", required: false)

</body>
</html>
