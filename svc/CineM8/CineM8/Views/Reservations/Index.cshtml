@model IEnumerable<CineM8.Models.Reservation>

@{
    ViewBag.Title = "Reservations";
}

<h2>Reservations</h2>


<table class="table">
    <tr>
        <th>
            Film
        </th>
        <th>
            Data
        </th>
        <th>
            Sala
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaHallId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfSeats) 
            </td>

        </tr>
    }

</table>
